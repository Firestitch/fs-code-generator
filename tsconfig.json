{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*":[
        "node_modules/*",
        "src/types/*"
      ]
    },
    "sourceRoot": "src",
    "outDir": "dist"
  },
  "typeRoots": [
    "node_module/@types"
  ],
  "include": [
    "src/**/*"
  ]
}
